                        <div class="weather-info">
                            <h4><i class="fas fa-cloud-sun"></i> Current Conditions</h4>
                            <p>Partly cloudy, 28°C | Good for walking portions</p>
                        </div>
                    </div>
                `;
                showNotification('Route found successfully!', 'success');
            } else {
                showNotification('Please enter both locations', 'error');
            }
        }

        // Checklist functions
        function initializeChecklist() {
            Object.keys(checklistItems).forEach(category => {
                const container = document.getElementById(category);
                checklistItems[category].forEach((item, index) => {
                    const div = document.createElement('div');
                    div.className = 'checklist-item';
                    div.innerHTML = `
                        <input type="checkbox" id="${category}_${index}" onchange="updateProgress()">
                        <label for="${category}_${index}">${item}</label>
                    `;
                    container.appendChild(div);
                });
            });
        }

        function updateProgress() {
            const allCheckboxes = document.querySelectorAll('.checklist input[type="checkbox"]');
            const checkedBoxes = document.querySelectorAll('.checklist input[type="checkbox"]:checked');
            const progress = (checkedBoxes.length / allCheckboxes.length) * 100;

            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = Math.round(progress) + '% Complete';

            // Update item appearance
            allCheckboxes.forEach(checkbox => {
                const item = checkbox.closest('.checklist-item');
                if (checkbox.checked) {
                    item.classList.add('completed');
                } else {
                    item.classList.remove('completed');
                }
            });
        }

        // Packing functions
        function generatePackingList() {
            const tripType = document.getElementById('tripType').value;
            const duration = document.getElementById('tripDuration').value;
            const weather = document.getElementById('weather').value;

            if (!tripType || !duration || !weather) return;

            const packingData = {
                business: {
                    essentials: ['Formal shirts', 'Dress pants', 'Blazer', 'Dress shoes', 'Belt', 'Ties'],
                    electronics: ['Laptop', 'Chargers', 'Business cards', 'Presentation materials'],
                    accessories: ['Watch', 'Briefcase', 'Umbrella']
                },
                leisure: {
                    clothing: ['Casual shirts', 'Jeans', 'Comfortable shoes', 'Sleepwear', 'Underwear'],
                    entertainment: ['Books', 'Headphones', 'Camera', 'Portable charger'],
                    accessories: ['Sunglasses', 'Hat', 'Backpack']
                },
                adventure: {
                    gear: ['Hiking boots', 'Quick-dry clothing', 'Rain jacket', 'Backpack', 'Water bottle'],
                    safety: ['First aid kit', 'Flashlight', 'Multi-tool', 'Emergency whistle'],
                    navigation: ['Map', 'Compass', 'GPS device']
                },
                beach: {
                    beachwear: ['Swimwear', 'Beach towel', 'Flip-flops', 'Sun hat', 'Cover-ups'],
                    protection: ['Sunscreen', 'Sunglasses', 'Aloe vera', 'Beach umbrella'],
                    fun: ['Beach games', 'Snorkel gear', 'Waterproof phone case']
                }
            };

            const weatherItems = {
                hot: ['Light clothing', 'Shorts', 'Tank tops', 'Sandals', 'Sun protection'],
                warm: ['T-shirts', 'Light pants', 'Comfortable shoes', 'Light jacket'],
                mild: ['Layers', 'Light sweater', 'Jeans', 'Closed shoes', 'Light jacket'],
                cold: ['Warm coat', 'Thermal wear', 'Gloves', 'Scarf', 'Warm boots'],
                mixed: ['Versatile layers', 'Both warm and cool clothes', 'Jacket', 'Various footwear']
            };

            const container = document.getElementById('packingList');
            container.innerHTML = '';

            if (packingData[tripType]) {
                Object.keys(packingData[tripType]).forEach(category => {
                    const categoryDiv = document.createElement('div');
                    categoryDiv.className = 'packing-category';
                    categoryDiv.innerHTML = `
                        <h3><i class="fas fa-tag"></i> ${category.charAt(0).toUpperCase() + category.slice(1)}</h3>
                        <div class="packing-items">
                            ${packingData[tripType][category].map(item =>
                        `<span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${item}</span>`
                    ).join('')}
                        </div>
                    `;
                    container.appendChild(categoryDiv);
                });
            }

            // Add weather-specific items
            if (weatherItems[weather]) {
                const weatherDiv = document.createElement('div');
                weatherDiv.className = 'packing-category';
                weatherDiv.innerHTML = `
                    <h3><i class="fas fa-cloud-sun"></i> Weather-Specific</h3>
                    <div class="packing-items">
                        ${weatherItems[weather].map(item =>
                    `<span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${item}</span>`
                ).join('')}
                    </div>
                `;
                container.appendChild(weatherDiv);
            }

            // Add duration-based recommendations
            const durationDiv = document.createElement('div');
            durationDiv.className = 'packing-category';
            durationDiv.innerHTML = `
                <h3><i class="fas fa-calendar-day"></i> For ${duration} days</h3>
                <div class="packing-items">
                    <span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${Math.ceil(duration * 1.5)} underwear</span>
                    <span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${Math.ceil(duration * 1.2)} socks</span>
                    <span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${Math.ceil(duration / 2)} pants</span>
                    <span class="packing-item" onclick="togglePackingItem(this)"><i class="fas fa-circle"></i> ${duration} shirts</span>
                </div>
            `;
            container.appendChild(durationDiv);
        }

        function togglePackingItem(element) {
            element.classList.toggle('checked');
            if (element.classList.contains('checked')) {
                element.innerHTML = element.innerHTML.replace('fa-circle', 'fa-check-circle');
            } else {
                element.innerHTML = element.innerHTML.replace('fa-check-circle', 'fa-circle');
            }
        }

        // Document functions
        function showAddDocumentModal() {
            document.getElementById('documentModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('documentModal').style.display = 'none';
        }

        function addDocument() {
            const type = document.getElementById('docType').value;
            const number = document.getElementById('docNumber').value;
            const expiry = document.getElementById('docExpiry').value;

            if (type && number && expiry) {
                const doc = {
                    id: Date.now(),
                    type,
                    number,
                    expiry: new Date(expiry)
                };
                documents.push(doc);
                renderDocuments();
                closeModal();

                // Clear form
                document.getElementById('docNumber').value = '';
                document.getElementById('docExpiry').value = '';

                showNotification('Document added successfully!', 'success');
            } else {
                showNotification('Please fill all required fields', 'error');
            }
        }

        function renderDocuments() {
            const container = document.getElementById('documentList');
            container.innerHTML = '';

            if (documents.length === 0) {
                container.innerHTML = `
                    <div class="card" style="text-align: center; padding: 40px; grid-column: 1 / -1;">
                        <i class="fas fa-file-alt fa-3x" style="color: #667eea; margin-bottom: 20px;"></i>
                        <h3>No Documents Added</h3>
                        <p>Add your travel documents to keep track of their status</p>
                    </div>
                `;
                return;
            }

            documents.forEach(doc => {
                const now = new Date();
                const expiryDate = new Date(doc.expiry);
                const daysUntilExpiry = Math.ceil((expiryDate - now) / (1000 * 60 * 60 * 24));

                let statusClass = '';
                let statusText = '';

                if (daysUntilExpiry < 0) {
                    statusClass = 'expired';
                    statusText = 'EXPIRED';
                } else if (daysUntilExpiry < 180) {
                    statusClass = 'expiring-soon';
                    statusText = `Expires in ${daysUntilExpiry} days`;
                } else {
                    statusText = `Valid for ${daysUntilExpiry} days`;
                }

                const div = document.createElement('div');
                div.className = `document-item ${statusClass}`;
                div.innerHTML = `
                    <div class="actions">
                        <button class="btn btn-secondary btn-sm" onclick="removeDocument(${doc.id})"><i class="fas fa-trash"></i></button>
                    </div>
                    <h4><i class="fas fa-file"></i> ${doc.type.charAt(0).toUpperCase() + doc.type.slice(1)}</h4>
                    <p><strong><i class="fas fa-hashtag"></i> Number:</strong> ${doc.number}</p>
                    <p><strong><i class="fas fa-calendar-times"></i> Expires:</strong> ${doc.expiry.toLocaleDateString()}</p>
                    <p><strong><i class="fas fa-info-circle"></i> Status:</strong> ${statusText}</p>
                `;
                container.appendChild(div);
            });
        }

        function removeDocument(id) {
            documents = documents.filter(doc => doc.id !== id);
            renderDocuments();
            showNotification('Document removed', 'info');
        }

        // Currency functions
        function convertCurrency() {
            const amount = parseFloat(document.getElementById('currencyAmount').value);
            const toCurrency = document.getElementById('toCurrency').value;

            if (!amount || amount <= 0) {
                showNotification('Please enter a valid amount', 'error');
                return;
            }

            // Simulated conversion rates
            const rates = {
                USD: 0.012,
                EUR: 0.011,
                GBP: 0.0095,
                JPY: 1.70,
                AUD: 0.018,
                CAD: 0.016
            };

            const converted = amount * rates[toCurrency];
            const currencySymbols = {
                USD: '$',
                EUR: '€',
                GBP: '£',
                JPY: '¥',
                AUD: 'A$',
                CAD: 'C$'
            };

            document.getElementById('conversionResult').innerHTML = `
                <div style="font-size: 1.5rem; margin: 10px 0;">
                    <span style="font-weight: bold;">₹${amount}</span> = 
                    <span style="font-weight: bold; color: #667eea;">${currencySymbols[toCurrency]}${converted.toFixed(2)}</span>
                </div>
                <div style="font-size: 0.9rem; color: #666;">
                    Exchange rate: 1 INR = ${currencySymbols[toCurrency]}${rates[toCurrency].toFixed(4)}
                </div>
            `;

            showNotification('Currency converted!', 'success');
        }

        function exportItinerary() {
            const destination = document.getElementById('destination').value || 'Your Trip';
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            let exportText = `🌍 ${destination} Travel Itinerary\n`;
            exportText += `📅 ${startDate} to ${endDate}\n\n`;

            exportText += `📋 ITINERARY:\n`;
            itineraryItems.sort((a, b) => a.time.localeCompare(b.time)).forEach(item => {
                exportText += `${item.time} - ${item.name} (${item.location}) - ₹${item.cost}\n`;
            });

            exportText += `\n📄 DOCUMENTS:\n`;
            documents.forEach(doc => {
                exportText += `${doc.type}: ${doc.number} (expires: ${doc.expiry.toLocaleDateString()})\n`;
            });

            // Create and download file
            const blob = new Blob([exportText], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${destination.replace(/\s+/g, '_')}_itinerary.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            showNotification('Itinerary exported!', 'success');
        }

        // Initialize app
        document.addEventListener('DOMContentLoaded', function () {
            initializeChecklist();

            // Set default dates
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);

            document.getElementById('startDate').value = today.toISOString().split('T')[0];
            document.getElementById('endDate').value = tomorrow.toISOString().split('T')[0];

            // Close modal when clicking outside
            document.getElementById('documentModal').addEventListener('click', function (e) {
                if (e.target === this) {
                    closeModal();
                }
            });

            // Initialize packing list
            generatePackingList();

            // Initialize document list
            renderDocuments();

            // Initialize itinerary
            renderItinerary();
        });
    </script>
</body>

</html>
